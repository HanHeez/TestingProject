<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item android:right="@dimen/length_15">
                <shape>
                    <gradient android:startColor="@color/transparent" android:endColor="@color/white" android:angle="0.0" />
                </shape>
            </item>
            <item android:left="@dimen/length_85">
                <shape>
                    <solid android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/transparent" />
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="1"
    android:id="@+id/layout_1"
    android:layout_width="match_parent"
    android:layout_height="@dimen/length_80"
    android:background="@drawable/item_bg_transparent"
    >
    <android.support.v7.widget.SwitchCompat
        android:layout_centerInParent="true"
        android:id="@+id/sw_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:thumb="@drawable/v7_switch_thumb_20dp_selector"
        app:switchMinWidth="@dimen/length_35"
        android:layout_above="@+id/txt_1"
        app:trackTint="@color/v7_switch_track_selector" />

    <TextView
        android:id="@+id/txt_1"
        android:text="@string/zhuanlanzhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/length_3"
        android:layout_marginBottom="@dimen/length_14"
        android:textColor="@color/color_3b3f47"
        android:textSize="@dimen/qd_fontsize_10"
        android:textStyle="bold" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/length_13"
    android:paddingBottom="@dimen/length_13">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/length_13"
        android:gravity="center_vertical"
        android:text="@string/qingshuruyanzhengma"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/textsize_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_90"
        android:layout_marginLeft="@dimen/length_13"
        android:layout_marginTop="@dimen/length_13"
        android:layout_marginRight="@dimen/length_13"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/image_validate_edittext"
            android:layout_width="0dp"
            android:layout_height="@dimen/length_70"
            android:layout_weight="1"
            android:background="@drawable/v5_login_edit_bg"
            android:ellipsize="end"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:hint=""
            android:maxLength="6"
            android:singleLine="true"
            android:textColor="@color/text_enable"
            android:textColorHint="@color/text_nine_color"
            android:textSize="@dimen/textsize_14" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/length_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:background="@color/red"
                android:id="@+id/mValidateCodeWebView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/length_70"
                android:gravity="center"
                android:paddingTop="@dimen/length_5_fu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/click_image_refresh"
                android:textColor="@color/text_nine_color"
                android:textSize="@dimen/textsize_8" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/length_13"
        android:layout_marginTop="@dimen/length_20"
        android:layout_marginRight="@dimen/length_13"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ok"
            style="@style/main_red_btn_style"
            android:layout_weight="1"
            android:text="@string/queding" />

        <TextView
            android:id="@+id/cancel"
            style="@style/main_white_btn_style"
            android:layout_marginLeft="@dimen/length_10"
            android:layout_weight="1"
            android:text="@string/quxiao" />
    </LinearLayout>
</LinearLayout>

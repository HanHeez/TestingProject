<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_loading_layout"
    android:layout_width="250dp"
    android:layout_height="82dp"
    android:layout_gravity="center"
    android:gravity="center">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="82dp"
        android:background="@drawable/loading_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/login_loading_progressBar"
            android:layout_width="@dimen/loading_icon_54x54"
            android:layout_height="@dimen/loading_icon_54x54"
            android:layout_marginRight="10dp"
            android:indeterminateDrawable="@drawable/progress_40_blue_anim"
            android:indeterminateDuration="1000"
            android:indeterminateOnly="true" />

        <TextView
            android:id="@+id/login_loading_msg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/loading_icon_54x54"
            android:gravity="center"
            android:text="请稍候..."
            android:textColor="@color/text_color_c104"
            android:textSize="@dimen/text_size_class_4" />
    </LinearLayout>
</RelativeLayout>
